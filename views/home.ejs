<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Tangerine">

    <link rel="stylesheet" href="/styles/home.css">
</head>

<body>
    <form class="todo-form" action="/create-todo" method="post">

        <!-- heading of our todo app  -->
        <h1 class="heading">
            <%= title %>
        </h1>
        <br>

        <table>

            <!-- input description  -->
            <tr>
                <div class="description">
                    <label for="desc">DESCRIPTION</label>
                    <input type="text" class="no-outline" id="desc" name="description"
                        placeholder="What do you need to do?" required>
                </div>
            </tr>

            <!-- input category and date  -->
            <tr>

                <td>
                    <div class="category">
                        <label class="cat-label" for="cate">CATEGORY</label>
                        <select id="cate" name="category" class="optionselect no-outline">
                            <option value="personal">Personal</option>
                            <option value="work">Work</option>
                            <option value="school">School</option>
                            <option value="cleaning">Cleaning</option>
                            <option value="other">Other</option>
                        </select>
                    </div>

                </td>
                <td>
                    <div class="due-date">
                        <label for="date1" class="date-label">DUE DATE</label>
                        <input type="date" class="no-outline" id="date1" name="date" required>
                    </div>

                </td>


            </tr>

            <!-- add task and delete task button  -->
            <tr>
                <td class="btn">

                    <button class="add-button"><img
                            src="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/plus-512.png" height="12px"
                            width="12px" /> ADD
                        TASK</button>

                <td class="btn2">
                    <button class="delete-button"><img src="https://cdn-icons-png.flaticon.com/512/1345/1345874.png"
                            height="10px" width="10px" /> DELETE TASKS</button>
                </td>
                </td>
            </tr>

        </table>
    </form>
    <!-- todo list all data  -->
    <div class="todolists">
        <ul class="ul-list">
            <% for (let i of todo_lists ){ %>
                <li>
                    <div class="contents">

                        <div class="check-box">
                            <input type="checkbox" id="check" name="check" value="check">
                        </div>

                        <div class="data">

                            <p>
                                <%= i.description %>
                            </p>
                            <p><img src="">
                                <%= i.date %>
                            </p>
                        </div>

                        <div class="btn-list">
                            <button class="no-outline">
                                <%= i.category %>
                            </button>
                        </div>
                    </div>
                </li>
                <%}%>
        </ul>

    </div>

    <script type=" text/javascript" src="/js/script.js"></script>
</body>

</html>